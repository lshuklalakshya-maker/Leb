  <script>
    function aiReply() {
      let q = document.getElementById("question").value.toLowerCase();
      let reply = "Mujhe samajh nahi aaya ðŸ¤”";

      if (q.includes("hello")) reply = "Hello! Kaise ho ðŸ˜Š";
      else if (q.includes("name")) reply = "Main ek Simple AI hoon ðŸ¤–";
      else if (q.includes("science")) reply = "Science bahut interesting hai ðŸ”¬";
      else if (q.includes("math")) reply = "Math practice se easy ho jata hai âž•";
      else if (q.includes("bye")) reply = "Bye! Phir milenge ðŸ‘‹";

      document.getElementById("reply").innerText = reply;
    }
  </script>

